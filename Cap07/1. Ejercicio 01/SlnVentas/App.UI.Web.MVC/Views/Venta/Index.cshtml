
@{
    ViewBag.Title = "Movimientos";
}

<div id="registrarVenta" class="box box-warning">
    <div class="box-header">
        <h3 class="box-title">Realizar Venta</h3>
    </div>

    <div class="box-body">
        <form>
            <div class="form-group">
                <label>Cliente</label>
                <!-- Lista Cliente-->
            </div>
            <div class="form-group">
                <label>Nombre Producto</label>
                <div class="input-group input-group-sm">
                    <input type="text" readonly class="form-control nombre-producto" />
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-info btn-buscar-producto"> Buscar</button>
                    </span>
                </div>
            </div>
            <div class="form-group">
                <label>Precio Producto</label>
                <input type="text" class="form-control precio-producto" readonly/>
            </div>
            <div class="form-group">
                <label>Cantidad</label>
                <input type="text" class="form-control" />
            </div>
            <div class="form-group text-center">
                <button type="button" class="btn btn-success">Agregar</button>
            </div>
        </form>

        <div>
            <!-- Mostrar un listado de lo que se va comprando-->
        </div>
    </div>

    <div class="box-footer">
        <button class="btn-primary">Registrar Venta</button>
    </div>
</div>


@Modal.CreateModal("Búsqueda de Productos", "BusquedaProductoPopupID", "app.RegistrarVentaView.MostrarProducto()")

@section scriptsAdicionales{
    <script>
        app.RegistrarVentaView.Init();
    </script>   
}

