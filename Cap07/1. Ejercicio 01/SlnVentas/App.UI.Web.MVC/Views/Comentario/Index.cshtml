@model IEnumerable<App.UI.Web.MVC.Models.ViewModels.ComentarioViewModel>

@{
    ViewBag.Title = "Index";
}


@*<a href="@Url.Action("Registrar", "Comentario", new { Area = "" })">Crear</a>*@
<p>
    @Html.ActionLink("Nuevo Comentario", "Registrar")
</p> 

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ComentarioID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opinion)
        </th>
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ComentarioID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Correo)
        </td>
        <td>
            @Html.Raw( item.Opinion)
        </td>
        
    </tr>
}

</table>
