@model App.UI.Web.MVC.Models.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{

    if (Model != null && !String.IsNullOrWhiteSpace(Model.MensajeValidacion))
    {
        <div class="alert alert-danger" role="alert">
            @Model.MensajeValidacion
        </div>
    }



    <div class="form-horizontal" action="/action_page.php">
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Usuario:</label>
            <div class="col-sm-6">

                @Html.EditorFor(item => item.Login,new { @class = "form-control" , @autocomplete = "off"})
                @Html.ValidationMessageFor(item => item.Login, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">Clave:</label>
            <div class="col-sm-6">
                @Html.EditorFor(item => item.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(item => item.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Ingresar</button>
            </div>
        </div>
    </div>
}

@section scriptsAdicionales{
    @Scripts.Render("~/bundles/jqueryval");


}
